@model IEnumerable<FarmaciaWeb.Models.Entrada>

@{
	ViewBag.Title = "Listado de Entradas";
}

<div class="container mt-5">
	<div class="card shadow-lg border-0 rounded-4">
		<div class="card-header bg-success text-white text-center rounded-top-4">
			<h3 class="mb-0 fw-bold">Listado de Entradas</h3>
		</div>
		<div class="card-body p-4">
			<div class="d-flex justify-content-end mb-3">
				<a asp-action="Create" class="btn btn-primary btn-lg rounded-pill shadow-sm">
					Registrar Entrada
				</a>
			</div>

			<table class="table table-hover table-striped align-middle shadow-sm rounded-3">
				<thead class="table-dark text-center">
				<tr>
					<th>Producto</th>
					<th>Cantidad</th>
					<th>Fecha Ingreso</th>
				</tr>
				</thead>
				<tbody class="text-center">
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Producto</td>
						<td>@item.Cantidad</td>
						<td>@item.FechaIngreso.ToString("dd/MM/yyyy")</td>
					</tr>
				}
				</tbody>
			</table>
		</div>
	</div>
</div>