@model FarmaciaWeb.Models.Producto

@{
    ViewBag.Title = "Eliminar Producto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center rounded-top-4">
                    <h3 class="mb-0 fw-bold">Eliminar Producto</h3>
                </div>
                <div class="card-body p-4 text-center">
                    <h5 class="mb-4">¿Estás seguro que deseas eliminar este producto?</h5>

                    <dl class="row text-start">
                        <dt class="col-sm-4 fw-bold">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4 fw-bold">Descripción</dt>
                        <dd class="col-sm-8">@Model.Descripcion</dd>

                        <dt class="col-sm-4 fw-bold">Precio</dt>
                        <dd class="col-sm-8">S/. @Model.Precio</dd>

                        <dt class="col-sm-4 fw-bold">Stock</dt>
                        <dd class="col-sm-8">@Model.Stock</dd>

                        <dt class="col-sm-4 fw-bold">Fecha Expiración</dt>
                        <dd class="col-sm-8">@Model.FechaExpiracion.ToShortDateString()</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill shadow-sm">
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow-sm">
                                Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
