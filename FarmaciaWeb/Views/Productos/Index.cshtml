@model IEnumerable<FarmaciaWeb.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h2 class="mb-0 fw-bold">Lista de Productos</h2>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Precio (S/.)</th>
                        <th>Stock</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td class="fw-semibold">@item.Nombre</td>
                            <td>@item.Precio.ToString("C")</td>
                            <td>@item.Stock</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-warning btn-sm rounded-pill me-2">
                                    Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-danger btn-sm rounded-pill">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-3">
                <a asp-controller="Home" asp-action="Index"
                   class="btn btn-secondary btn-lg rounded-pill shadow-sm">
                    Volver
                </a>

                <a asp-action="Create" class="btn btn-success btn-lg rounded-pill shadow-sm">
                    Nuevo Producto
                </a>
            </div>
        </div>
    </div>
</div>
