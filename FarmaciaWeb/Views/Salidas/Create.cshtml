@model FarmaciaWeb.Models.Salida

@{
    ViewBag.Title = "Registrar Salida";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0 fw-bold">Registrar Salida</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">

                        <div class="form-group mb-3">
                            <label asp-for="ProductoId" class="fw-bold">Producto</label>
                            <select asp-for="ProductoId" asp-items="ViewBag.Productos"
                                    class="form-control rounded-pill shadow-sm">
                                <option value="">-- Seleccionar Producto --</option>
                            </select>
                            <span asp-validation-for="ProductoId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Cantidad" class="fw-bold">Cantidad</label>
                            <input asp-for="Cantidad" class="form-control rounded-pill shadow-sm"
                                   placeholder="Ingrese la cantidad" />
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill shadow-sm">
                                Volver
                            </a>
                            <button type="submit" class="btn btn-success btn-lg rounded-pill shadow-sm">
                                Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}